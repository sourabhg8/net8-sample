{
  "AppSettings": {
    "ApplicationName": "Microservices API",
    "Version": "1.0.0-dev",
    "Environment": "Development"
  },
  "JwtSettings": {
    "SecretKey": "DevelopmentSecretKeyThatShouldBeAtLeast32CharactersLong!@#$%",
    "Issuer": "Microservices-Dev",
    "Audience": "MicroservicesClients-Dev",
    "ExpirationMinutes": 120
  },
  "CosmosDb": {
    "ConnectionString": "",
    "DatabaseName": "testing",
    "UsersContainerName": "Users",
    "UsersPartitionKeyPath": "/orgId",
    "OrganizationsContainerName": "Organizations",
    "OrganizationsPartitionKeyPath": "/id"
  },
  "AzureSearch": {
    "Endpoint": "https://med-ai-search-service.search.windows.net",
    "ApiKey": "",
    "IndexName": "medai-pmc-chunks",
    "FilterFields": ["source", "text_source"],
    "DefaultFilters": ["commercial_safe eq true"],
    "FacetFields": [
      "source,count:10,sort:count",
      "year,count:10,sort:count",
      "text_source,count:10,sort:count"
    ],
    "FacetCount": 10,
    "SelectFields": [
      "chunk_id",
      "id",
      "pmcid",
      "pmid",
      "title",
      "authors",
      "keywords",
      "year",
      "commercial_safe",
      "source",
      "text_source",
      "sourceUrl",
      "blobUrl",
      "blobName",
      "containerName",
      "chunk"
    ],
    "VectorSearchEnabled": true,
    "VectorFieldName": "chunkVector",
    "VectorK": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Information"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  }
}
