{
  "AppSettings": {
    "ApplicationName": "Microservices API",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!@#$%",
    "Issuer": "Microservices",
    "Audience": "MicroservicesClients",
    "ExpirationMinutes": 60
  },
  "PasswordSettings": {
    "SecretKey": "YourPasswordHashingSecretKey!@#$%^&*()_+2025SecureKey",
    "Iterations": 100000,
    "SaltSize": 16,
    "HashSize": 32
  },
  "CosmosDb": {
    "ConnectionString": "",
    "DatabaseName": "testing",
    "UsersContainerName": "Users",
    "UsersPartitionKeyPath": "/orgId",
    "OrganizationsContainerName": "Organizations",
    "OrganizationsPartitionKeyPath": "/id"
  },
  "AzureSearch": {
    "Endpoint": "https://med-ai-search-service.search.windows.net",
    "ApiKey": "",
    "IndexName": "medai-pmc-chunks",
    "FilterFields": ["source", "text_source"],
    "DefaultFilters": ["commercial_safe eq true"],
    "FacetFields": [
      "source,count:10,sort:count",
      "year,count:10,sort:count",
      "text_source,count:10,sort:count"
    ],
    "FacetCount": 10,
    "SelectFields": [
      "chunk_id",
      "id",
      "pmcid",
      "pmid",
      "title",
      "authors",
      "keywords",
      "year",
      "commercial_safe",
      "source",
      "text_source",
      "sourceUrl",
      "blobUrl",
      "blobName",
      "containerName",
      "chunk"
    ],
    "VectorSearchEnabled": true,
    "VectorFieldName": "chunkVector",
    "VectorK": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },
  "AllowedHosts": "*"
}
